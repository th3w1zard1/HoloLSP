{
  "name": "holo-lsp",
  "description": "Language Server Protocol extension for KOTOR NWScript - providing IntelliSense, syntax highlighting, and code completion for Star Wars: Knights of the Old Republic scripting",
  "author": "th3w1zard1",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "holo-lsp",
  "categories": [
    "Languages",
    "Programming Languages",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/th3w1zard1/HoloLSP"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "HoloLSP",
      "properties": {
        "holoLSP.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "holoLSP.builtinScriptsDirectory": {
          "scope": "resource",
          "type": "string",
          "description": "Directory path for builtin KOTOR scripts. Can be absolute path, relative path, or file:// URI. If not set, uses hololsp:// virtual scheme."
        },
        "holoLSP.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "nwscript",
        "aliases": [
          "NWScript",
          "nwscript"
        ],
        "extensions": [
          ".nss",
          ".ncs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nwscript",
        "scopeName": "source.nwscript",
        "path": "./syntaxes/nwscript.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "nwscript",
        "label": "NWScript Debugger",
        "languages": [
          "nwscript"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the NWScript file to debug",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "nwscript",
            "request": "launch",
            "name": "Debug NWScript",
            "program": "${file}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "NWScript: Debug Script",
            "description": "Debug a NWScript file",
            "body": {
              "type": "nwscript",
              "request": "launch",
              "name": "${1:Debug NWScript}",
              "program": "${2:${file}}",
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              }
            }
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "nwscript.startDebugging",
        "title": "Start Debugging",
        "category": "NWScript"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == nwscript || resourceExtname == .nss",
          "command": "nwscript.startDebugging",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "clean": "npx -y rimraf ./client ./server",
    "fix-workspace-junctions": "node -e \"const fs=require('fs');const path=require('path');[['holo-lsp-client','client'],['holo-lsp-server','server']].forEach(([pkg,dir])=>{const src=path.join('node_modules',pkg);if(fs.existsSync(src)){fs.rmSync(src,{recursive:true,force:true});fs.cpSync(dir,src,{recursive:true});}});console.log('Workspace junctions fixed');\"",
    "publish": "npx -y @vscode/vsce package -o output/holo-lsp-1.0.0.vsix",
    "build:mcp": "npm run -w mcp build",
    "build:tests": "npm run -w server build:tests",
    "inspect:mcp": "npm run -w mcp inspect",
    "start:mcp": "npm run -w mcp start"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  }
}
