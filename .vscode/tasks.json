{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile",
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "shared",
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "panel": "shared",
        "reveal": "silent",
        "clear": true
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "npm: kill-server",
      "type": "shell",
      "command": "taskkill",
      "args": ["/F", "/IM", "node.exe", "/T"],
      "windows": {
        "command": "taskkill",
        "args": ["/F", "/IM", "node.exe", "/T"]
      },
      "linux": {
        "command": "pkill",
        "args": ["-f", "server.js"]
      },
      "osx": {
        "command": "pkill",
        "args": ["-f", "server.js"]
      },
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ]
}